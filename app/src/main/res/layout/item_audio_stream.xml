<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/streamIndex"
            layout="@layout/inline_simple_list_item_2" />

        <include
            android:id="@+id/streamTitle"
            layout="@layout/inline_simple_list_item_2" />

        <include
            android:id="@+id/codecName"
            layout="@layout/inline_simple_list_item_2" />

        <include
            android:id="@+id/streamBitRate"
            layout="@layout/inline_simple_list_item_2" />

        <include
            android:id="@+id/channels"
            layout="@layout/inline_simple_list_item_2" />

        <include
            android:id="@+id/channelLayout"
            layout="@layout/inline_simple_list_item_2" />

        <include
            android:id="@+id/sampleRate"
            layout="@layout/inline_simple_list_item_2" />

        <include
            android:id="@+id/sampleFormat"
            layout="@layout/inline_simple_list_item_2" />

        <include
            android:id="@+id/streamLanguage"
            layout="@layout/inline_simple_list_item_2" />

        <include
            android:id="@+id/streamDisposition"
            layout="@layout/inline_simple_list_item_2" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>